@import '~@/styles/defs'

.instruction-slide {
  display: flex;
  height: 100%;
}

.instructions {
  overflow-y: auto;
  flex: 1 0 40%;
  padding: 30px;
  light-border()

  h2 {
    font-weight: bold;
  }

  .name {
    margin-bottom: 20px;
  }

  .directions {
    margin-top: 40px;

    .direction {
      margin-top: 20px;

      .text {
        transition-duration: .2s;
      }

      .buttons {
        margin-top: 20px;
        display: flex;
        height: 30px;

        div {
          padding: 0 5px;
          font-size: 25px;
        }
      }
    }
  }
}

.nico {
  overflow-y: auto;
  flex: 1 0 60%;
  padding: 50px;
  light-border()
  light-margin-left()
}
